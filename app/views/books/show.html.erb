<div class='container px-5 px-sm-0'>
  <div class='row'>
    
<div class='col-md-3'>
   <h2>User info</h2>
   <tr><%= image_tag @user.get_profile_image("100x100") %></tr>
  <p>name <%= @user.name %></p>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
  <div class ='row'>
  <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>

<%= form_with model: @book do |f| %>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error">
  <div class="errormessage"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<div class="field">
<div class="form-group">
  <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
</div>
<div class="form-group">
  <%= f.label :Opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
</div>
</div>
</div>


<div class='col-md-8 offset-md-1'>
<%= flash[:notice] %>
<h2>Book detail</h2>
  <table class='table'>
  <tr>
    <td><%= image_tag @user.get_profile_image('100x100') %></td>
    <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
    <td><%= @book.body %></td>

    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}"  %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete , data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
    <% end %>
 </tr>
</table>
</div>
</div>
</div>

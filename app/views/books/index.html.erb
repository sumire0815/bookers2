<div class ="bookers">
<div class ="book">
 <div class= "col-xs-3"> 
   <h2>User info</h2>
   <tr><%= image_tag @user.get_profile_image("100x100") %></tr>
  <p>name <%= current_user.name %></p>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
  <p><%= link_to "edit", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%></p>
</div>

<%= form_with model: @book do |f| %>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error">
  <div class="errormessage"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>


<div class="field">
  <div class="block">
  <%= f.label :Title %>
  <%= f.text_field :title %>
  </div>
  <div class="block">
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
</div>

<div class="books">
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
       <td><%= image_tag book.user.get_profile_image('50x50') %></td>
       <td><%= link_to book.title, "/books/#{book.id}" %></td>
       <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
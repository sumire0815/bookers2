<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
    <h2>User info</h2>
    
<% if @user.errors.any? %>
  <div id="error">
  <div class="errormessage"><%= @user.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

    <%= form_with model: @user do |f| %>
    <div class="form-group">
     <label for="inputName">Name</label>
      <%= f.text_field :name, class: "form-control name" %>
      </div>
      
      <div class="form-group">
     <label for="inputImage">ProfileImage</label>
      <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      
      <div class="form-group">
      <label for="inputName">introduction</label>
      <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
     <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      <% end %>
  </div>
</div>
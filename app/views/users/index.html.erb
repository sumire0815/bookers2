<div class = bookers>
<div class ="book">
  <div class ="info">
   <h2>User info</h2>
   <tr><%= image_tag @user.get_profile_image("100x100") %></tr>
   <p>name <%= current_user.name %></p>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
  <p><%= link_to "edit", edit_user_path(current_user.id) %></p>
  </div>

<%= form_with model: @book do |f| %>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error">
  <div class="errormessage"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>


<div class="field">
  <div class="block">
  <%= f.label :Title %>
  <%= f.text_field :title %>
  </div>
  <div class="block">
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
</div>

<div class="users">
<h2>Users</h2>
<table>
<thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image("100x100") %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
